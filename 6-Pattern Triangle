#include<iostream>
using namespace std;

int main(){

    int n,i,j,k,l,m,count=0;
    cin>>n;

    for(i=1;i<=n;i++){

        for(j=1;j<=n-i;j++){
            cout<<"   ";
        }
        
        for(l=1;l<=i;l++){
            count++;
            cout<<count<<"  ";
            
        }


        for(m=1;m<=i-1;m++){
            count--;
            cout<<count<<"  ";
        }

        
        cout<<endl;
    }


return 0;
}
